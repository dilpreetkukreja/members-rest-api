<h1 class='text-center' style='color:darkgoldenrod'>
  EDIT MEMBER FORM
</h1>
<div class='row mt-3 mb-5'>
  <div class='col-4 offset-4'>
    <div class='form-group'>
      <label for='name'>
        Name:
      </label>
      <input id='name' value={{name}} />
    </div>
    <div class='form-group'>
      <label for='email'>
        Email:
      </label>
      <input id='email' value={{email}} />
    </div>

    <button
      id={{id}}
      name='button'
      type='submit'
      class='btn update-btn'
      style='background-color:darkgoldenrod; color:white'
    >
      Update
    </button>
  </div>
</div>
<script>
  const updateBtn = document.querySelector('.update-btn');
        console.log(updateBtn);

        updateBtn.addEventListener('click', (e)=>{

        console.log(e.target.id);
        const id_to_updated = e.target.id;

        const name_c= document.getElementById('name');
        const email= document.getElementById('email');
        const someData = {
            name: name_c.value,
            email: email.value,
        };
        console.log(someData);
        fetch(`https://members-rest-api.herokuapp.com/api/members/update/${id_to_updated}`,{
            // headers: {Authorization:'Client-ID f7a64103f53cc45537eea148e1ed9ea5afa9ba29a93302e0743d3b58d733712e'},
            method: 'PUT',
            headers: {
                'Content-type': 'application/json; charset=UTF-8', // Indicates the content
            },
                body: JSON.stringify(someData),
            }
        )
        .then(response=>{
            return response.text();
        })
        .then(response=>{
        console.log(response);
         window.location.replace('https://members-rest-api.herokuapp.com/');

        })
        .catch(err=>console.log(err));


        })
</script>